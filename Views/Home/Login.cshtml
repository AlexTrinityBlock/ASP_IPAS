<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #ff8404;
        height: 100vh;
    }

    input[type="text"] {
        color: white;
        background-color: #000000;
    }

        input[type="text"]:focus {
            color: white;
            background-color: #000000;
        }

    #login .container #login-row #login-column #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #333333;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }

    .text-info {
        color: #dd4814;
    }
</style>

<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-4">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/API/login" method="post">
                            <h2 class="text-center " style="color:#ff8404">IPAS</h2>
                            <div class="form-group">
                                <label for="username" style="color:#ff8404">帳號:</label><br>
                                <input type="text" name="user" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" style="color:#ff8404">密碼:</label><br>
                                <input type="text" name="password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <input onclick="clickHandle()" type="button" name="submit" class="btn  btn-md btn-block" style="background-color: #ff8404; color: white" value="登入">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    function clickHandle() {

        //AJAX
        $.ajax({
            method: "POST",
            url: "/API/login",
            data: {
                user: $("#username").val(),
                password: $("#password").val()
            },
            statusCode: {
                500: function () {
                    Swal.fire({
                        title: '伺服器端錯誤!',
                        text: '請檢察是否所有的數值都有輸入',
                        icon: 'error',
                        confirmButtonText: '了解'
                    })
                },
            }
        })
            .done(function (msg) {
                if (msg.data == "true") {
                    window.location.replace("/Home/Index");
                } else {
                    Swal.fire({
                        title: '帳號密碼錯誤!',
                        text: '帳號密碼錯誤',
                        icon: 'error',
                        confirmButtonText: '了解'
                    })
                }
                
            });
    }
</script>
